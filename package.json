{
  "name": "pull-request-stats",
  "version": "1.0.0",
  "description": "Pull request stats for Azure DevOps.",
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "npm run clean && webpack --mode production",
    "compile:dev": "npm run clean && webpack --mode development",
    "build": "npm run compile",
    "build:dev": "npm run compile:dev && npm run postbuild",
    "postbuild": "npm run package-extension -- --rev-version",
    "package-extension": "tfx extension create --manifest-globs azure-devops-extension.json src/**/*.json",
    "publish-extension": "tfx extension publish --manifest-globs azure-devops-extension.json src/**/*.json",
    "eslint": "eslint ./src || (exit 0)",
    "stylelint": "stylelint \"src/**/*.scss\" --cache --formatter verbose --output-file stylelint.log || (exit 0)"
  },
  "repository": {
    "type": "git",
    "url": "https://git.ebacher-skemp.com/azure-devops/pull-request-stats.git"
  },
  "keywords": [
    "extensions",
    "Azure DevOps"
  ],
  "author": "James Skemp",
  "license": "MIT",
  "dependencies": {
    "azure-devops-extension-api": "^4.238.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-ui": "^2.241.0",
    "react": "~16.13.1",
    "react-dom": "~16.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/react": "~16.8.25",
    "@types/react-dom": "~16.8.5",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "globals": "^15.6.0",
    "rimraf": "~5.0.7",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "style-loader": "~4.0.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "tfx-cli": "^0.17.0",
    "ts-loader": "~9.5.1",
    "typescript": "^3.9.10",
    "typescript-eslint": "^7.13.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
